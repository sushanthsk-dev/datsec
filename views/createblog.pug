extends base
block content
    header
        nav.navbar.navbar-default.navbar-inverse(style='background-color: black;z-index:9999;')
            .container
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1' aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Datsec
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/admin/blogs') #Dashboard
                        li
                            a(href='/about') #Logout

                // /.navbar-collapse
                // /.container-fluid
    section.container-fluid.blog-form-container
        form.form-group.create-blog-form
            label(for='title') Title :
            input#title.form-control(type='text' name='title' placeholder='Enter a title of a blog' autocomplete="off" required)
            br
            label(for='blogImage') Upload image cover :
            input#blogImage.form-control(type='file' name='blogImage' accept='image/*' style='width:250px' required)
            br
            label(for='content') Content :
            textarea#content.form-control(name='content' cols='30' rows='10' placeholder="Enter a content")
            br
            div
                label(for='sel1') No of Steps:
                div(style='display: flex;')
                        select#sel1.form-control(style='width:60px;')
                            option(value='1')
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                            option(value='6') 6
                            option(value='7') 7
                        br
                        button.btn.btn-primary.btnCreateSteps(style='margin: 0px 8px;') Create
            .steps
            br
            button.btn.btn-success.btnCreateBlog(style='margin: 10px 0px; float: right;') Sumbit

    .footer
