extends base
block content
    style.
        .card {
            overflow-x:hidden;
            width: 350px;
            background: #fff;
            padding-bottom: 4px;
            border-radius: 6px;
        }
    header
        nav.navbar.navbar-default.navbar-inverse(style='background-color: black;')
                .container
                    // Brand and toggle get grouped for better mobile display
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1' aria-expanded='false')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/') Datsec
                    // Collect the nav links, forms, and other content for toggling
                    #bs-example-navbar-collapse-1.collapse.navbar-collapse
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href='/') #Home
                            li
                                a(href='/about') #About
                            li
                                a(href='/blogs') #Blogs
                            li
                                a(href='/contact') #contact
                    // /.navbar-collapse
                    // /.container-fluid
    section.blog-container
        each blog in blogs
            .card
                img.card-img-top(src=`/img/blogs/${blog.imageCover}` alt=`${blog.slug}` style='width: 100%')
                .card-body(style='padding: 6px')
                    - const date=blog.createdAt.toLocaleString('en-us', {day:'numeric', month:'short',year: 'numeric'});
                    h5.card-date= date
                    - const id=`${blog._id}`;
                    a(href=`/blogs/${blog.slug}`).card-title=blog.title
                    - const description =  `${blog.content.substring(0,100)} [...]`;
                    p.card-text= description
    .pagination
        if blogLength > 20
            if pageNum <=1 || pageNum == Nan
                li
                    a(href=`/blogs`) &laquo;
            else   
                li
                    a(href=`/blogs/page/${pageNum-1}`) &laquo;
        - let i=0;
        - const maxPage=parseInt((blogLength/20));
        if ! maxPage == 0
            while i < maxPage
                li
                    a(href=`/blogs/page/${i+1}`)= `${i+1}`
                - i++;
        if blogLength > 20
            if pageNum <=1 || pageNum == Nan
                li
                    a(href=`/blogs/page/1`) &raquo;
            else
                li
                    a(href=`/blogs/page/${pageNum+1}`) &raquo;
    .footer
        ul.icons
            li
                a.icon.fa.fa-facebook(href='#' target='_blank')
                    span.label Facebook
            li
                a.icon.fa.fa-instagram(href='https://www.instagram.com/sushanthsk_/' target='_blank')
                    span.label Instagram
            li
                a.icon.fa.fa-envelope(href='https://mail.google.com/mail/?view=cm&fs=1&tf=1&to=flydecor65@gmail.com' target='_blank')
                    span.label Email
