extends base
block content
    header
        nav.navbar.navbar-default.navbar-inverse(style='background-color: black;')
                .container
                    // Brand and toggle get grouped for better mobile display
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1' aria-expanded='false')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/') Datsec
                    // Collect the nav links, forms, and other content for toggling
                    #bs-example-navbar-collapse-1.collapse.navbar-collapse
                        if user
                            if user.role == 'admin'
                                ul.nav.navbar-nav.navbar-right
                                    li
                                        a(href='/admin/blogs') #Blogs
                                    li
                                        a(href='/logout') #Logout
                            else
                                ul.nav.navbar-nav.navbar-right
                                    li
                                        a(href='/') #Home
                                    li
                                        a(href='/about') #About
                                    li
                                        a(href='/blogs') #Blogs
                                    li
                                        a(href='/contact') #contact                                    
                                            
                        else
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a(href='/') #Home
                                li
                                    a(href='/about') #About
                                li
                                    a(href='/blogs') #Blogs
                                li
                                    a(href='/contact') #contact 
    
    section.container-fluid.response-container(style='margin-top: 10px; justify-content: center;')
        div.response-div
            each res in response
                .card
                    .card-body
                        h4= res.name
                        a= res.email
                        h5= res.subject
                        !=[res.message]
                    .contro--container
                        .control-button
                            a.btn-sm.btn-danger.btn-delete-res(arial-id=`${res.id}`) Delete

        script(src='/js/bundle.js')    
    .footer
        ul.icons
            li
                a.icon.fa.fa-facebook(href='#' target='_blank')
                    span.label Facebook
